<h1>New Question</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      </div>
      <div class="form-group">
        <%= f.label :question %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question. Please be specific as possible because I don't know what the hell you're thinking." %>
      </div>
      <div class="form-group">
        <%= f.label :resolved%>
        <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit Question", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
