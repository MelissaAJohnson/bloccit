<div class = "row">
  <div class = "col-md-8">
    <div class = "media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class = "media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
          <br />
        </div>
      <% end %>
      <div class = "media-body">
        <h2 class = "media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if user_has_posts?(@user) %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else %>
  <p><%= @user.name %> has no posts.</p>
<% end %>

<% if user_has_comments?(@user) %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
  <p><%= @user.name %> has not commented yet.</p>
<% end %>

<h2>Favorites</h2>
<% if user_has_favorites?(@user) %>
  <% @user.favorites.each do |favorite| %>
    <div class="row">
      <div class="col-md-8">
        <div class="media">
          <br />
          <div class="media-left">
            <%= image_tag favorite.post.user.avatar_url(48), class: "gravatar" %>
          </div>
          <div class="media-body">
            <h3 class="media-heading"> <%= render partial: 'posts/post', locals: { post: favorite.post } %> </h3>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p><%= @user.name %> has not favorited anything.</p>
<% end %>
