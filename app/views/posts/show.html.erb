<h1>
  <%= @post.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
  </small>
</h1>
<div class = "row">
  <div class = "col-md-8">
    <%= render partial: "labels/list", locals: { labels: @post.labels } %>
    <br />
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
    <% if current_user %>
    <h3>Comments</h3>
    <% @post.comments.each do |comment| %>
    <%= render partial: 'comments/comment', locals: { parent: @post, comment: comment } %>
  <% end %>
    <% end %>
  </div>

    <div class="col-md-4">
      <% if current_user == @post.user || current_user.admin? || current_user.moderator? %>
        <%= link_to "Edit Post", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
      <% end %>
      <% if current_user == @post.user || current_user.admin? %>
        <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
      <% end %>
    </div>

</div>
